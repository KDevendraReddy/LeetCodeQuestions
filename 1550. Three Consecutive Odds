1550. Three Consecutive Odds

class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int c=0;
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i]%2==1)
            {c++;
            if(c==3)
            return true;}
            else
            c=0;
        }
        if(c==3)
        return true;
        return false;
        
    }
}
